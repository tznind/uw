{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://roguetrader.local/schemas/stats.schema.json",
  "title": "Commander Stats",
  "description": "Schema for Commander character stats configuration",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": {
        "type": "string",
        "description": "Unique identifier for the stat",
        "pattern": "^[a-z]+$"
      },
      "title": {
        "type": "string",
        "description": "Display title of the stat (usually uppercase)"
      },
      "shape": {
        "type": "string",
        "description": "Visual shape for the stat input container",
        "enum": ["hexagon", "square", "circle", "clock", "double-up"],
        "default": "hexagon"
      },
      "clock": {
        "type": "object",
        "description": "Clock configuration (required when shape is 'clock')",
        "properties": {
          "type": {
            "type": "string",
            "description": "Folder name in clocks/ directory containing the SVG faces",
            "examples": ["quarter_twelfths", "doom_clock"]
          },
          "faces": {
            "type": "integer",
            "description": "Number of clock faces (0.svg through N.svg)",
            "minimum": 1,
            "maximum": 24
          },
          "floatingInputs": {
            "type": "array",
            "description": "Optional array of floating input boxes positioned over the clock",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Unique identifier for this floating input",
                  "pattern": "^[a-zA-Z0-9_-]+$"
                },
                "position": {
                  "type": "array",
                  "description": "Position in pixels [x, y] from top-left of clock container",
                  "items": {
                    "type": "number"
                  },
                  "minItems": 2,
                  "maxItems": 2
                },
                "size": {
                  "type": "array",
                  "description": "Size in pixels [width, height]",
                  "items": {
                    "type": "number",
                    "minimum": 1
                  },
                  "minItems": 2,
                  "maxItems": 2
                }
              },
              "required": ["id", "position", "size"],
              "additionalProperties": false
            }
          }
        },
        "required": ["type", "faces"],
        "additionalProperties": false
      },
      "max": {
        "type": "integer",
        "description": "Maximum value for this stat",
        "minimum": 1,
        "maximum": 10,
        "default": 5
      },
      "min": {
        "type": "integer",
        "description": "Minimum value for this stat",
        "minimum": -3,
        "maximum": 0,
        "default": -2
      },
      "tracks": {
        "type": "array",
        "description": "Array of tracking configurations for resources associated with this stat",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Display name for the tracked resource",
              "examples": ["Wounds", "Armor", "Focus"]
            },
            "max": {
              "type": "integer",
              "description": "Maximum number of points that can be tracked",
              "maximum": 10
            },
            "shape": {
              "type": "string",
              "description": "Visual shape for the track counters",
              "enum": ["square", "circle", "triangle", "hexagon"],
              "default": "square"
            },
            "startLabel": {
              "type": "string",
              "description": "Optional small text label shown before the shapes (e.g., '0', 'weak', 'calm')",
              "examples": ["0", "weak", "calm", "safe"]
            },
            "endLabel": {
              "type": "string",
              "description": "Optional small text label shown after the shapes (e.g., 'max', 'strong', 'breaking')",
              "examples": ["max", "strong", "breaking", "doomed"]
            },
            "dynamic": {
              "type": "boolean",
              "description": "If true, shows a 'max...' button to let user set custom max value",
              "default": false
            }
          },
          "required": [],
          "additionalProperties": false
        }
      }
    },
    "required": ["id"],
    "additionalProperties": false
  }
}
